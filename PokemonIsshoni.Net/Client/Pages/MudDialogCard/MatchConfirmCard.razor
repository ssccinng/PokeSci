

@if (PCLMatch != null)
{
    <MudDialog Style="width:1000px">
    @*<TitleContent >
        <b>@MudDialog.Title</b>
    </TitleContent>*@
        <DialogContent>
            <MudContainer Style="max-height: 500px; overflow-y: scroll" MaxWidth=MaxWidth.ExtraLarge  Class="tw-p-0">
            <PokemonIsshoni.Net.Client.Pages.MatchPage.MatchDetailSetting PCLMatch=PCLMatch />

            </MudContainer>
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel" Class="tw-font-bold">取消</MudButton>
            <MudButton Color="Color.Info" OnClick="Submit" Class="tw-font-bold">确认</MudButton>
        </DialogActions>
    </MudDialog>
}


@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public PCLMatch PCLMatch { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}
